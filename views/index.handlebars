<h3 class="page-header text-center" xmlns="http://www.w3.org/1999/html">Connect the dots and capture a Box!</h3>
<p class="text-center">Welcome {{title}}</p>

<p id="token" hidden value="{{token}}" class="text-center">{{token}}</p>

<input id="token1" type="hidden" value="{{token}}"/>

<p class="text-center" id="result">  </p>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modal_title" class="modal-title text-center"></h4>
            </div>
            <div class="modal-body">
                <p class="text-center" id="modal_question">Do you want to play again?</p>
            </div>

            <div class="modal-footer">
                <form method="post" action="/">
                    <button type="button" class="btn btn-default" id="modal-btn-yes">Yes</button>
                    <!--<button type="button" class="btn btn-primary" id="modal-btn-no">No</button>-->
                </form>
            </div>
        </div>

    </div>
</div>
<!--invitationModal-->
<div id="invitationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="invitationModal_title" class="modal-title text-center"></h4>
            </div>
            <div class="modal-body">
                <p class="text-center" id="invitationModal_question">Do you want to play again?</p>
            </div>

            <div class="modal-footer">
                <form method="post" action="/">
                    <button type="button" class="btn btn-default" id="invitaion-btn-yes">Yes</button>
                    <button type="button" class="btn btn-primary" id="invitaion-btn-no">No</button>
                </form>
            </div>
        </div>

    </div>
</div>
<!--invitationModal-->
<div id="invitationAcceptedModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="invitationAcceptedModal_title" class="modal-title text-center"></h4>
            </div>
            <div class="modal-body">
                <p class="text-center" id="invitationAcceptedModal_Info">Do you want to play again?</p>
            </div>
            <div class="modal-footer">
                <form method="post" action="/">
                    <button type="button" class="btn btn-default" id="invitaionAccepted-btn-yes">ok</button>
                   </form>
            </div>
        </div>

    </div>
</div>
<div id="invitationRejectedModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="invitationRejectedModal_title" class="modal-title text-center"></h4>
            </div>
            <div class="modal-body">
                <p class="text-center" id="invitationRejectedModal_Info"></p>
            </div>

            <div class="modal-footer">
                <form method="post" action="/">
                    <button type="button" class="btn btn-default" id="invitaionRejected-btn-yes">ok</button>
                </form>
            </div>
        </div>

    </div>
</div>
