                    <span class="input-group-addon" id="basic-addon1">{{userName}}</span>
                    <input id="message" style="padding-right:3px;padding-left: 3px" type="text" class="form-control " placeholder="Type your message here..." />
                    <span class="input-group-btn">
                                    <input id="emoji" type="image" height="34" style="padding-left: 0;padding-right: 0"  src="/images/emojiicon.png" title="emoji" class="btn btn-default"/>
                            <button class="btn btn-primary" id="send" >
                            Send</button>
                    </span>
                </div>
                    <div id="emojiWrapper"></div>
            </div>

        </div>

    </div>
    </div>


    <div class="row col-xs-4 col-md-4" id="game_area" style="margin-left:0px;">
