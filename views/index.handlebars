<div class="container container-margin" style="max-width: 1400px;">

    <div class="row chat-window col-xs-4 col-md-4" id="chat_window" style="margin-left:-50px;">
        <!--<div class="col-xs-12 col-md-12">-->
        <div class="panel">
            <div id ="temponlineuser " class="input-group" style="margin-bottom:0px">

            </div>
            <div class="list-users"  style=" overflow-y: scroll;max-height:100px;">
                <table class="table">
                    <tbody id="onlineuser">

                    </tbody>
                </table>

            </div>
        <div  id="box-invasion-chat-div" class=" panel-primary">
            <h2 class="panel-heading">Discussion</h2>
            <div id="box-invasion-chat-win" style="margin-bottom: 0px" class="">
                <div id="messageArea">
                    <div id="typingMessage" > </div>
                </div>
                <input id="user" type="hidden" value="{{userName}}" data-target="#myModal" />
